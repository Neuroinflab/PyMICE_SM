import numpy as np
import pymice as pm
import pweave
import matplotlib
import dateutil
import pytz
import sys


class CiteModule(object):
    TEMPLATE_REFERENCE = '~\cite{{{ref}}}'

    def __repr__(self):
        return self._version()

    def _version(self):
        return self.TEMPLATE.format(v=self.MODULE.__version__,
                                    ref=self._reference())

    def _reference(self):
        try:
            ref = self.VERSION_REFERENCE[self.MODULE.__version__]

        except KeyError:
            return ''

        return self.TEMPLATE_REFERENCE.format(ref=ref)

class CitePyMICE(CiteModule):
    MODULE = pm
    TEMPLATE = '\emph{{PyMICE}} v.~{v}{ref}'
    VERSION_REFERENCE = {'0.2.3': 'pymice0.2.3',
                         '0.2.4': 'pymice0.2.4',
                         '0.2.5': 'pymice0.2.5',
                         '1.0.0': 'pymice1.0.0',
                         '1.1.0': 'pymice1.1.0',
                         '1.1.1': 'pymice1.1.1'}

